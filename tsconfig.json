{
  "compilerOptions": {
    "jsx": "react",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "module": "esnext",
    "target": "esnext",
    "outDir": "lib",
    "declaration": true,
    "sourceMap": true,
    "lib": ["esnext", "dom"],
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "tdesign-react": ["packages/components"],
      "tdesign-react/*": ["packages/components/*"],
      "@tendaui/components": ["packages/components"],
      "@tendaui/components/*": ["packages/components/*"],
      "@tendaui/icons": ["packages/tendaui-icons"],
      "@tendaui/icons/*": ["packages/tendaui-icons/*"],
      "@tendaui/utils": ["packages/utils/js"],
      "@tendaui/utils/*": ["packages/utils/js/*"],
      "@tendaui/react": ["packages/components"],
      "@tendaui/react/*": ["packages/components/*"]
    },
    "allowJs": true,
    "checkJs": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "./packages/components",
    "./globals.d.ts",
    "./test/config/index.d.ts",
    "**/**/__tests__/*"
  ],
  "exclude": [
    "**/*.jsx",
    "**/**/_usage/*",
    "node_modules",
    "dist",
    "lib",
    "esm",
    "cjs",
    "es"
  ],
  "types": [
    "node",
    "jest",
    "vitest/globals",
    "@testing-library/jest-dom",
    "@testing-library/react-hooks",
    "@testing-library/react",
    "minimatch"
  ],
  "compileOnSave": false
}
