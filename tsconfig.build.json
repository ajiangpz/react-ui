{
  "extends": "./tsconfig",
  "include": ["packages/components"],
  "exclude": [
    "**/**/__tests__/*",
    "**/**/_example-js/*",
    "**/**/_example/*",
    "**/**/_usage/*",
    "**/**/*.stories.tsx",
    "node_modules",
    "dist",
    "lib",
    "esm",
    "cjs",
    "es",
    "packages/tendaui-react/"
  ],
  "compilerOptions": {
    "emitDeclarationOnly": true,
    "rootDir": "packages",
    "skipLibCheck": true
  }
}
