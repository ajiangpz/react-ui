{
  "name": "react-mobile-ui",
  "version": "1.0.0",
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.esm.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "dev": "storybook dev -p 6006",
    "clean": "rimraf dist",
    "build": "npm run clean && npm run type && rollup -c",
    "build:watch": "rollup -c -w",
    "build:es": "rollup -c ./config/rollup.config.es.mjs",
    "build:umd": "rollup -c ./config/rollup.config.umd.mjs",
    "build:iife": "rollup -c ./config/rollup.config.iife.mjs",
    "build:storybook": "storybook build",
    "lint": "eslint . --ext .ts,.tsx --ignore-path .gitignore --fix",
    "test": "vitest",
    "prepare": "husky",
    "dev:link": "npm run build && npm link && cd playground && npm link react-mobile-ui",
    "type": "tsc -p tsconfig.json",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "predeploy": "npm run build-storybook",
    "deploy-storybook": "gh-pages -d storybook-static"
  },
  "keywords": [
    "react",
    "mobile",
    "ui",
    "components",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "description": "A lightweight, beautiful and touch-friendly React UI library for mobile web applications",
  "dependencies": {
    "@commitlint/config-conventional": "^19.8.1",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-typescript": "^12.1.2",
    "@use-gesture/react": "^10.3.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.344.0",
    "rollup-plugin-dts": "^6.2.1",
    "rollup-plugin-postcss": "^4.0.2",
    "tailwind-merge": "^2.6.0",
    "tailwind-variants": "^0.2.1"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "volta": {
    "node": "20.16.0"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@storybook/addon-docs": "^9.0.8",
    "@storybook/addon-onboarding": "^9.0.8",
    "@storybook/react-vite": "^9.0.8",
    "@vitejs/plugin-react": "^4.5.2",
    "commitlint": "^19.8.1",
    "crypto-browserify": "^3.12.1",
    "gh-pages": "^6.3.0",
    "husky": "^9.1.7",
    "rimraf": "^6.0.1",
    "rollup": "^4.43.0",
    "rollup-plugin-copy": "^3.5.0",
    "storybook": "^9.0.8",
    "stream-browserify": "^3.0.0",
    "typescript": "^5.8.3"
  }
}
